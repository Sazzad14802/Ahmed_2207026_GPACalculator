<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="578.0" prefWidth="697.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calcScreenController">
   <bottom>
        <Button fx:id="secondaryButton" onAction="#switchToHomeScreen" text="Switch to Home" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <top>
      <Label text="GPA Calculator" BorderPane.alignment="CENTER">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane prefHeight="144.0" prefWidth="546.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="66.8" minHeight="0.0" prefHeight="31.799993896484374" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="66.8" minHeight="0.0" prefHeight="35.000006103515624" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="66.8" minHeight="10.0" prefHeight="35.000006103515624" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <VBox>
                     <children>
                        <Label text="Course Title :" />
                        <TextField fx:id="txtTitle" />
                     </children>
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox GridPane.columnIndex="1">
                     <children>
                        <Label text="Course Code :" />
                        <TextField fx:id="txtCode" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox GridPane.rowIndex="1">
                     <children>
                        <Label text="Teacher 1 Name:" />
                        <TextField fx:id="txtTeacher1" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="Teacher 2 Name:" />
                        <TextField fx:id="txtTeacher2" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <HBox alignment="CENTER_LEFT" prefWidth="274.0" GridPane.rowIndex="2">
                     <children>
                        <Label text="Course Credit:">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="txtCredit" prefHeight="26.0" prefWidth="54.0" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <Label prefHeight="18.0" prefWidth="45.0" text="Grade:">
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </Label>
                        <ComboBox fx:id="comboGrade" prefHeight="26.0" prefWidth="66.0">
                           <HBox.margin>
                              <Insets right="100.0" />
                           </HBox.margin>
                        </ComboBox>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#addCourse" prefHeight="35.0" prefWidth="62.0" text="Add" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </GridPane>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#calcGPA" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #03fc94;" text="Calculate GPA" />
              </buttons>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </ButtonBar>
            <TableView fx:id="tableCourses" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colTitle" prefWidth="155.99994504451752" text="Course Title" />
                <TableColumn fx:id="colCredit" prefWidth="101.60003662109375" text="Course Credit" />
                  <TableColumn fx:id="colGrade" prefWidth="55.20001220703125" text="Grade" />
              </columns>
            </TableView>
            <Label text="To delete a course, select and press delete" />
         </children>
      </VBox>
   </center>
</BorderPane>
